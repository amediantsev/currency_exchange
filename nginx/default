server {
	listen 80 default_server;
	listen [::]:80 default_server;

	server_name www.currency-exchange.com 127.0.0.1;

    location /static/ {
        alias /etc/nginx/static_content;
    }

    location /media/ {
        alias /etc/nginx/media;
    }

    location / {
        include proxy_params;
        proxy_pass http://backend:8000;
    }

}
